<h1>Registrar cliente</h1>

<% @customer.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<% end %>

<%= form_for @customer do |c| %>
  <%= c.label :name %>
  <%= c.text_field :name %>
  <%= c.label :document %>
  <%= c.text_field :document %>
  <%= c.label :email %>
  <%= c.text_field :email %>
  <%= c.submit 'Enviar' %>
<% end %>