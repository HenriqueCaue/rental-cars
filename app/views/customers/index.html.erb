<h1>Clientes</h1>

<% if @customers.empty? %>
  <h1>Não há clientes cadastrados</h1>
<% end %>

<% @customers.each do |c| %>
  <h3><%= link_to c.name, customer_path(id: c.id)%></h3>
<% end %>

<%= form_with url: search_customers_path, method: :get do |f| %>
  <%= f.label :q, 'Busca' %>
  <%= f.search_field :q %>
  <%= f.submit 'Buscar' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Documento</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr id="car-model-<%= customer.id %>">
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.document %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Registrar novo cliente', new_customer_path %>
<%= link_to 'Voltar', root_path %>