<h1>Fabricantes</h1>
<ul>
    <% if @subsidiaries.empty? %>
      <h1>Nenhum fabricante cadastrado</h1>
    <% end %>
    <% @subsidiaries.each do |m| %>
      <h3><%= link_to m.name, subsidiary_path(id: m.id) %></h3>
    <% end %>
    <%= link_to 'Registrar nova filial', new_subsidiary_path %>
    <%= link_to 'Voltar', root_path %>
</ul>