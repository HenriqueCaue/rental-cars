<h1>Fabricantes</h1>
<ul>
    <% if @manufacturers.empty? %>
      Nenhum fabricante cadastrado
    <% end %>
    <% @manufacturers.each do |m| %>
      <%= link_to m.name, manufacturer_path(id: m.id) %>
    <% end %>
    <%= link_to 'Registrar novo fabricante', new_manufacturer_path %>
    <%= link_to 'Voltar', root_path %>
</ul>