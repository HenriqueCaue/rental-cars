<h1>Novo modelo de carro</h1>

<% if @car_model.errors.any? %>
  <ul>
    <% @car_model.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @car_model, local:true do |cm|%>
  <%= cm.label :name %>
  <%= cm.text_field :name %>
  <%= cm.label :year %>
  <%= cm.number_field :year %>
  <%= cm.label :motorization %>
  <%= cm.text_field :motorization %>
  <%= cm.label :fuel_type %>
  <%= cm.text_field :fuel_type %>
  <%= cm.label :manufacturer_id, 'Fabricantes' %>
  <%= cm.collection_select :manufacturer_id, @manufacturer, :id, :name %>
  <%= cm.label :car_category_id, 'Categoria' %>
  <%= cm.collection_select :car_category_id, @car_category, :id, :name %>
  <%= cm.submit 'Enviar' %>
<% end %>